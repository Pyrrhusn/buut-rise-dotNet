@using Rise.Shared.TimeSlots;
@using Rise.Client.Reservations.Components.Dialogs;
@using Microsoft.Extensions.Localization;
@using Rise.Client.Localization.Reservations
@inject IStringLocalizer<ReservationPageResources> Localizer

<MudContainer Class="pa-4">
    <MudStack Spacing="2">
        <MudStack>
            <MudText Typo="Typo.subtitle2">@Localizer["DateAndTime"]:</MudText>
            <MudText Typo="Typo.h5">@Date.ToString("D")</MudText>
            <MudText Typo="Typo.h5">@TimeSlot?.Start - @TimeSlot?.End</MudText>
        </MudStack>

        <MudDivider Class="my-3" />

        <MudStack>
            <MudText Typo="Typo.subtitle2">@Localizer["Name"]:</MudText>
            <MudText>@UserProfileDto.FirstName</MudText>
        </MudStack>

        <MudDivider Class="my-3" />

        <MudStack>
            <MudText Typo="Typo.subtitle2">@Localizer["Email"]:</MudText>
            <MudText>@UserProfileDto.Email</MudText>
        </MudStack>
    </MudStack>
</MudContainer>
